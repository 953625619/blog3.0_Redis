            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
        <table tableName="permission" enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false" selectByExampleQueryId="false">
            <property name="my.isgen.usekeys" value="true"/>
            <generatedKey column="id" sqlStatement="JDBC"/>
        </table>
        <table tableName="role_permission" enableCountByExample="false" enableDeleteByExample="false" enableSelectByExample="true"
               enableUpdateByExample="false" selectByExampleQueryId="false">
